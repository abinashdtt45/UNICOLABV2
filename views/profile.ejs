<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
            <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
                <meta content="" name="description">
                    <meta content="" name="author">
                        <title>
                            UnicoLAB
                        </title>
                        <link href="/img/logo/logo.jpg" rel="icon" type="image/png">
                            <!-- Bootstrap core CSS -->
                            <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" id="bootstrap-css" rel="stylesheet">
                                <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js">
                                </script>
                                <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
                                </script>
                                <!-- Custom fonts for this template -->
                                <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
                                    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet">
                                        <!-- Custom styles for this template -->
                                        <link href="/stylesheets/profile/profile.css" rel="stylesheet">
                                        </link>
                                    </link>
                                </link>
                            </link>
                        </link>
                    </meta>
                </meta>
            </meta>
        </meta>
    </head>
    <body>
        <div class="container-fluid emp-profile">
            <form action="/details" method="post">
                <div class="row">
                    <div class="col-md-10">
                        <div class="profile-head">
                            <h5>
                                <%=name%>
                            </h5>
                            <h6>
                                <%=designation%>
                            </h6>
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a aria-controls="home" aria-selected="true" class="nav-link active" data-toggle="tab" href="#home" id="home-tab" role="tab">
                                        About
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <input class="profile-edit-btn" name="btnAddMore" type="submit" value="Edit Profile"/>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div aria-labelledby="home-tab" class="tab-pane fade show active" id="home" role="tabpanel">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Institute
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%=college%>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Name
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%=name%>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Email
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%=email%>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Phone
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%=number%>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Experience in years
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%=exp%>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Publications
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%=pub%>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Profile Link
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%=link%>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Research Interest
                                    </label>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <%=interest%>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <form action="/logout" method="post">
                <input class="profile-edit-btn" name="btnAddMore" type="submit" value="Logout"/>
            </form>
        </div>
        <div class="container-fluid emp-profile">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <% for(var doc of docs){ %>
                        <div class="card text-white bg-secondary mb-3" style="max-width: 18rem; ">
                            <div class="card-header" style="width: 100%; height: 64px;  overflow: hidden; text-overflow: ellipsis;  ">
                                <h5>
                                    Title
                                </h5>
                                <p>
                                    <%=doc.title%>
                                </p>
                            </div>
                            <div class="card-body" style="width: 100%; height: 228px; text-overflow: ellipsis;">
                                <h5 class="card-title">
                                    Abstract
                                </h5>
                                <p class="card-text">
                                    <%=doc.abstract%>
                                </p>
                            </div>
                        </div>
                        <%}%>
                    </div>
                    <div class="col-md-4">
                        <a href="/idea">
                            Add More
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid emp-profile ">
            <div class="row">
                <div class="col-md-12">
                    <form action="/add_collaborator" method="post">
                        <div class="row">
                            <% for(var doc of list){ %>
                        <div class="card text-white bg-secondary mb-3" style="max-width: 18rem; ">
                            <div class="card-header" style="width: 100%; height: 64px;  overflow: hidden; text-overflow: ellipsis;  ">
                                <% if(own_id!=doc.id) {%>
                                <a href="<%=doc.url%>">
                                    <%=doc.name%>
                                </a>
                                <% } %>
                            </div>
                        </div>
                        <%}%>
                        </div>
                        <div class="col-md-4">
                            <input class="profile-edit-btn" name="btnAddMore" type="submit" value="Add Collaborator"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
